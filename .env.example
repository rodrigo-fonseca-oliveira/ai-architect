# ----- API / App -----
APP_ENV=local
APP_PORT=8000
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
RBAC_ENABLED=true

# ----- Database -----
DB_URL=sqlite:///./audit.db

# ----- LLM / RAG -----
LLM_PROVIDER=openai           # openai | azure | openrouter | stub
LLM_MODEL=gpt-4o-mini         # or gpt-4.1 | gpt-5 | claude-sonnet-4 | gemini-2.5-pro | stub
LLM_API_KEY=changeme
EMBEDDINGS_MODEL=text-embedding-3-small
VECTORSTORE_PATH=./.local/vectorstore
DOCS_PATH=./examples          # folder with PDFs for RAG

# ----- MLflow -----
MLFLOW_TRACKING_URI=./.mlruns  # local; set to http(s):// if remote
MLFLOW_EXPERIMENT_NAME=ai-risk-monitor
ML_BASELINE_DATA=./ml/data/baseline.csv

# ----- Metrics / Observability -----
PROMETHEUS_ENABLED=true
REQUEST_ID_HEADER=X-Request-ID

# ----- Compliance / Safety -----
DENYLIST=ssn,phi,credit_card,passport
ANONYMIZE_LOGS=true           # redact PII in audit logs
