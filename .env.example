# Core
APP_ENV=local
LOG_LEVEL=INFO
REQUEST_ID_HEADER=X-Request-ID

# RBAC / Security
# METRICS_TOKEN=

# RAG & Router
LC_RAG_ENABLED=false
ROUTER_ENABLED=false
EMBEDDINGS_PROVIDER=local
VECTORSTORE_PATH=./.local/vectorstore
DOCS_PATH=./docs
# RAG multi-query
RAG_MULTI_QUERY_ENABLED=false
RAG_MULTI_QUERY_COUNT=3
RAG_HYDE_ENABLED=false

# Architect
PROJECT_GUIDE_ENABLED=false

# LLM Provider (defaults keep offline stub)
LLM_PROVIDER=stub           # stub|openai|openrouter|azure
LLM_MODEL=gpt-4o-mini       # adjust per provider
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=512
LLM_ENABLE_QUERY=false
LLM_ENABLE_ARCHITECT=false
LLM_ENABLE_RESEARCH=false
OPENAI_API_KEY=
OPENROUTER_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Memory (short-term)
MEMORY_SHORT_ENABLED=false
MEMORY_DB_PATH=./data/memory_short.db
MEMORY_SHORT_MAX_TURNS=10
# Retention controls (optional)
SHORT_MEMORY_RETENTION_DAYS=0
SHORT_MEMORY_MAX_TURNS_PER_SESSION=0

# Memory (long-term)
MEMORY_LONG_ENABLED=false
MEMORY_COLLECTION_PREFIX=memory
# Retention & capacity (optional)
MEMORY_LONG_RETENTION_DAYS=0
MEMORY_LONG_MAX_FACTS=0

# Policy Navigator
POLICY_NAV_ENABLED=true
POLICY_NAV_MAX_SUBQS=3

# PII Remediation
PII_REMEDIATION_ENABLED=true
PII_REMEDIATION_INCLUDE_SNIPPETS=true

# DB
DB_URL=sqlite:///./audit.db

# ML / Training
MLFLOW_TRACKING_URI=./.mlruns
MLFLOW_EXPERIMENT_NAME=ai-monitor
