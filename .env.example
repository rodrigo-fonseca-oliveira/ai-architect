# ----- API / App -----
APP_ENV=local
APP_PORT=8000
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
RBAC_ENABLED=true

# ----- Database -----
DB_URL=sqlite:///./audit.db

# ----- LLM / RAG -----
LLM_PROVIDER=openai           # openai | azure | openrouter | stub
LLM_MODEL=gpt-4o-mini         # or gpt-4.1 | gpt-5 | claude-sonnet-4 | gemini-2.5-pro | stub
LLM_API_KEY=changeme
# Embeddings provider selection: local | openai | stub (defaults to local)
EMBEDDINGS_PROVIDER=local
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTORSTORE_PATH=./.local/vectorstore
DOCS_PATH=./examples          # folder with .txt/.md for RAG in Phase 1
# ----- Prompt Registry -----
PROMPT_QUERY_VERSION=
PROMPT_RESEARCH_VERSION=

# ----- MLflow -----
MLFLOW_TRACKING_URI=./.mlruns  # local; set to http(s):// if remote
MLFLOW_EXPERIMENT_NAME=ai-risk-monitor
ML_BASELINE_DATA=./ml/data/baseline.csv

# ----- Metrics / Observability -----
PROMETHEUS_ENABLED=true
REQUEST_ID_HEADER=X-Request-ID
# If set, /metrics requires this token via the X-Metrics-Token header.
# If unset or empty, /metrics is open.
METRICS_TOKEN=

# ----- Compliance / Safety -----
DENYLIST=ssn,phi,credit_card,passport
ANONYMIZE_LOGS=true           # redact PII in audit logs
